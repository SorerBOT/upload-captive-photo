{
  "type": "module",
  "scripts": {
    "start": "cross-env ENV_PATH=./local.env PGUSER=postgres PGHOST=localhost PGPASSWORD=postgres PGDATABASE=postgres PGSSL=false PGPORT=5432 nodemon dist/api.js",
    "start:debug": "cross-env ENV_PATH=./envs/local.env PGUSER=postgres PGHOST=localhost PGPASSWORD=postgres PGDATABASE=postgres PGSSL=false PGPORT=5432 nodemon --inspect-brk dist/api.js",
    "clean": "cross-env rm -rf ./dist",
    "check-circular-deps": "madge --circular dist/api.js",
    "build:watch": "npm run copy-files && tsc -w",
    "build": "npm run clean && tsc",
    "migrate": "cd resources/postgres && db-migrate up",
    "migrate-create": "cd resources/postgres && db-migrate create"
  },
  "dependencies": {
    "@google-cloud/common": "^5.0.0",
    "@google-cloud/storage": "^7.2.0",
    "cross-env": "^7.0.3",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "express": "^4.18.2",
    "express-formidable": "1.2.0",
    "lodash": "^4.17.21",
    "nodemon": "^3.0.1",
    "pg": "^8.11.3",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.18",
    "@types/express-formidable": "^1.2.1",
    "@types/lodash": "^4.14.199",
    "@types/pg": "^8.10.3"
  }
}
