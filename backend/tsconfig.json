{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "target": "es2021",
    "lib": [
      "es2021",
      "esnext.asynciterable"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}